<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeterinariaApp.Views.RegistroUsuarioPage"
             Title="Registro de Usuario"
             BackgroundColor="#FAFAFA">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Entry x:Name="usuarioEntry" Placeholder="Nombre de usuario" />
        <Entry x:Name="contraseñaEntry" Placeholder="Contraseña" IsPassword="true" />
        <Entry x:Name="confirmarEntry" Placeholder="Confirmar contraseña" IsPassword="true" />

        <Button Text="Crear cuenta"
                Clicked="OnCrearCuentaClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"/>

        <Picker x:Name="rolPicker" Title="Selecciona Rol">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Administrador</x:String>
                    <x:String>Veterinario</x:String>
                    <x:String>Usuario</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>


    </VerticalStackLayout>
</ContentPage>
