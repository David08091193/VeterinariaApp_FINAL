<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeterinariaApp.Views.ListaMascotasPage"
             Title="Mascotas Registradas">

    <StackLayout Padding="20">
        <CollectionView x:Name="mascotasCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <StackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Especie}" />
                            <Label Text="{Binding Raza}" />
                            <Label Text="{Binding Edad}" />
                            <Label Text="{Binding FotoPath}" FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
