<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="VeterinariaApp.Views.AgendaCitasPage"
             Title="Agenda de Citas"
             BackgroundColor="#FAFAFA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Agendar Cita"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"/>

            <!-- Calendario en cuadrícula -->
            <Label Text="Disponibilidad del mes"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <Grid x:Name="calendarioGrid"
                  ColumnDefinitions="*,*,*,*,*,*,*"
                  RowSpacing="8"
                  ColumnSpacing="8"
                  Margin="0,0,0,10"/>

            <!-- Formulario de cita -->
            <Picker x:Name="mascotaPicker"
                    Title="Selecciona una mascota"
                    ItemDisplayBinding="{Binding Nombre}"
                    BackgroundColor="White"/>

            <DatePicker x:Name="fechaPicker"
                        Format="dd/MM/yyyy"
                        MinimumDate="{x:Static sys:DateTime.Today}"
                        FontSize="18"/>

            <TimePicker x:Name="horaPicker"
                        FontSize="18"/>

            <Editor x:Name="motivoEditor"
                    Placeholder="Motivo de la cita (consulta, vacuna, cirugía...)"
                    AutoSize="TextChanges"
                    FontSize="18"/>

            <Button Text="Guardar Cita"
                    Clicked="OnGuardarCitaClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
