<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeterinariaApp.Views.LoginPage"
             Title="Iniciar Sesión"
             BackgroundColor="#FAFAFA">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Entry x:Name="usuarioEntry" Placeholder="Usuario" />
        <Entry x:Name="contraseñaEntry" Placeholder="Contraseña" IsPassword="true" />

        <Button Text="Ingresar"
                Clicked="OnIngresarClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"/>

        <Button Text="Registrarse"
                Clicked="OnRegistrarseClicked"
                BackgroundColor="#2196F3"
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
