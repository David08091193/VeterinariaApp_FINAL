<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeterinariaApp.Views.EditarMascotaPage"
             Title="Editar mascota">

    <ScrollView>
        <StackLayout Padding="20" Spacing="12">
            <Image x:Name="fotoMascota"
                   HeightRequest="160"
                   Aspect="AspectFill"
                   IsVisible="False" />

            <Entry x:Name="nombreEntry" Placeholder="Nombre" />
            <Entry x:Name="especieEntry" Placeholder="Especie" />
            <Entry x:Name="razaEntry" Placeholder="Raza" />
            <Entry x:Name="edadEntry" Placeholder="Edad" Keyboard="Numeric" />

            <Button Text="Actualizar"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnActualizarClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
